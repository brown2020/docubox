rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Deny all access by default
    match /{document=**} {
      allow read, write: if false;
    }

    // User top-level document (auth state sync)
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // User profile subcollection
    match /users/{userId}/profile/{docId} {
      allow read: if request.auth != null && request.auth.uid == userId;
      allow write: if request.auth != null && request.auth.uid == userId
        && request.resource.data.keys().hasAll(['email', 'credits', 'useCredits'])
        && request.resource.data.credits is number
        && request.resource.data.credits >= 0;
    }

    // User files subcollection
    match /users/{userId}/files/{fileId} {
      allow read: if request.auth != null && request.auth.uid == userId;
      allow create: if request.auth != null && request.auth.uid == userId
        && request.resource.data.userId == userId;
      allow update: if request.auth != null && request.auth.uid == userId;
      allow delete: if request.auth != null && request.auth.uid == userId;
    }

    // User payments subcollection
    match /users/{userId}/payments/{paymentId} {
      allow read: if request.auth != null && request.auth.uid == userId;
      allow create: if request.auth != null && request.auth.uid == userId;
      // Payments should not be updated or deleted by the client
      allow update, delete: if false;
    }
  }
}

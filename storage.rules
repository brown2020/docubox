rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Deny all access by default
    match /{allPaths=**} {
      allow read, write: if false;
    }

    // User files - scoped to authenticated user
    match /users/{userId}/files/{allPaths=**} {
      allow read: if request.auth != null && request.auth.uid == userId;
      allow write: if request.auth != null && request.auth.uid == userId
        && request.resource.size < 50 * 1024 * 1024; // 50MB limit
    }

    // User unstructured (parsed) data - scoped to authenticated user
    match /users/{userId}/unstructured/{allPaths=**} {
      allow read: if request.auth != null && request.auth.uid == userId;
      allow write: if request.auth != null && request.auth.uid == userId
        && request.resource.size < 10 * 1024 * 1024 // 10MB limit for chunks
        && request.resource.contentType == 'application/json';
    }
  }
}
